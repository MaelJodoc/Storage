CREATE TABLE ITEM
(
  ID bigint DEFAULT (NEXT VALUE FOR PUBLIC.SYSTEM_SEQUENCE_D5780382_F1EE_43EA_AFAE_626B0A4C657D) AUTO_INCREMENT PRIMARY KEY NOT NULL,
  NAME varchar(50),
  MANUFACTURER varchar(50),
  CUSTOM_CODE varchar(50),
  MMK_CODE varchar(50),
  UNIT varchar(20),
  QUANTITY_PER_UNIT integer,
  NUMBER_OF_UNITS integer DEFAULT 0,
  MIN_UNITS integer DEFAULT -1,
  MEDIUM_UNITS integer DEFAULT -1,
  MANY_UNITS integer DEFAULT -1
)